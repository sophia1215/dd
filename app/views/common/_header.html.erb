<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a href="<%= root_path %>" class="navbar-brand"><b>AsBana</b></a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
      <!-- Navbar Right Menu -->
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account Menu -->
          <li class="dropdown user user-menu">
            <% if user_signed_in? %>
              <!-- Menu Toggle Button -->
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- The user image in the navbar-->
                <%= image_tag("user2-160x160.jpg", class:"user-image", alt:"User Image") %>
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span class="hidden-xs">Hi, <%= current_user.name %></span>
              </a>
              <ul class="dropdown-menu">
                <li class="<%= yield(:edit_profile) %>">
                  <%= link_to "編輯個人檔案", edit_user_registration_path(current_user) %>
                </li>
                <li class="divider"></li>
                <li><%= link_to "登出", sign_out_path, method: :delete %></li>
            <% else %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">  會員</a>
              <ul class="dropdown-menu">
                <li class="<%= yield(:register) %>"><%= link_to "註冊", sign_up_path %></li>
                <li class="<%= yield(:login) %>"><%= link_to "登入", sign_in_path %></li>
            <% end %>
              </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-custom-menu -->
    </div>
    <!-- /.container-fluid -->
  </nav>
</header>