<% provide(:title, "忘記密碼") %>

<div class="col-md-4 col-md-offset-4">
  <div class="password-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">忘記密碼</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div id="error_explanation" class="col-md-12">
          <%= devise_error_messages! %>
        </div>

        <div class="col-md-12">
          <div class="form-group has-feedback">
            <%= f.input :email, :label=>false, required: true, autofocus: true, placeholder: "sophia@example.com" %>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>

          <div class="form-actions">
            <%= f.submit "重設密碼", class: "btn btn-large btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <%= render "users/shared/links" %>
  </div>
</div>