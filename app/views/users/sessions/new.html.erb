<% provide(:login, "active") %>
<% provide(:title, "登入") %>

<div class="col-md-4 col-md-offset-4">
  <div class="login-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">登入</h3>
    </div>
    <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>

      <div class="col-md-12">
        <div class="form-group has-feedback">
          <%= f.input :email, :label=>false, required: false, autofocus: true, placeholder: "sophia@example.com" %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.input :password, :label=>false, required: false, autocomplete: "off", placeholder: "Password" %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <div class="actions">
          <%= f.submit "登入", class: "btn btn-large btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <div>
    <%= render "users/shared/links" %>
  </div>
</div>

